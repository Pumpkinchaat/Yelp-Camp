<% layout("layouts/boilerplate") %> 
<h1 class="text-center">Add New Campground</h1>

    <form action="/campgrounds" method="POST" class="mx-auto" style="width: 70%;">
        <div class="form-group mb-2">
          <label for="title">Title</label>
          <input type="text" class="form-control" id="title" name="campground[title]" placeholder="Title">
        </div>
        <div class="form-group mb-2">
          <label for="location">Location</label>
          <input type="text" class="form-control" id="location" name="campground[location]" placeholder="Location">
        </div>
        <div class="col-auto">
            <label class="sr-only" for="inlineFormInputGroup">Price</label>
            <div class="input-group mb-2">
              <div class="input-group-prepend">
                <div class="input-group-text">$</div>
              </div>
              <input type="text" class="form-control" id="inlineFormInputGroup" name="campground[price]" placeholder="Price">
            </div>
        </div>
        <div class="form-group mb-2">
            <label for="description">Description</label>
            <input type="text" class="form-control" id="description" name="campground[description]" placeholder="Description">
        </div>
        <div class="form-group mb-2">
            <label for="image">Image Source</label>
            <input type="text" class="form-control" id="image" name="campground[image]" placeholder="Image Source">
        </div>
        <button type="submit" class="btn btn-success mb-1">Submit</button>
        <a href="/campgrounds" class="btn btn-primary mb-1">Show All Campgrounds</a>
      </form>